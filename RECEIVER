#include <nRF24L01.h>
#include <SPI.h>
#include <Servo.h>
#include <RF24.h>

// Create radio object
RF24 radio(7, 8); // CE, CSN pins (change as per your wiring)

// Servo objects
Servo myservo1;
Servo myservo2;
Servo myservo3;

// Motor pins (define actual pins you connected)
#define motor_1 2
#define motor_2 3
#define motor_3 4
#define motor_4 5
#define motor_5 6
#define motor_6 9

// Define data structure for received data
struct Data {
  int servoValue;
  int potentiometer;
  bool toggleSwitch;
  bool button;
};
Data receive_data;

void forward() {
  digitalWrite(motor_1, HIGH);
  digitalWrite(motor_2, HIGH);
  digitalWrite(motor_3, LOW);
  digitalWrite(motor_4, LOW);
}

void backward() {
  digitalWrite(motor_1, LOW);
  digitalWrite(motor_2, LOW);
  digitalWrite(motor_3, HIGH);
  digitalWrite(motor_4, HIGH);
}

void stopMotors() {
  digitalWrite(motor_1, LOW);
  digitalWrite(motor_2, LOW);
  digitalWrite(motor_3, LOW);
  digitalWrite(motor_4, LOW);
}

void setup() {
  Serial.begin(9600);
  radio.begin();
  radio.openReadingPipe(0, "000001"); // Example address
  radio.setPALevel(RF24_PA_MIN);
  radio.startListening();

  pinMode(motor_1, OUTPUT);
  pinMode(motor_2, OUTPUT);
  pinMode(motor_3, OUTPUT);
  pinMode(motor_4, OUTPUT);
  pinMode(motor_5, OUTPUT);
  pinMode(motor_6, OUTPUT);

  myservo1.attach(10); // Change pin numbers as per your wiring
  myservo2.attach(11);
  myservo3.attach(12);

  myservo1.write(90); // initial position
  myservo2.write(0);
  myservo3.write(0);
}

void loop() {
  if (radio.available()) {
    radio.read(&receive_data, sizeof(receive_data));

    // Control servo1
    myservo1.write(receive_data.servoValue);

    // Control motors with potentiometer
    if (receive_data.potentiometer > 523) {
      forward();
    } else if (receive_data.potentiometer < 500) {
      backward();
    } else {
      stopMotors();
    }

    // Toggle switch for mode
    if (receive_data.toggleSwitch) {
      digitalWrite(motor_5, HIGH);
      digitalWrite(motor_6, HIGH);
    } else {
      digitalWrite(motor_5, LOW);
      digitalWrite(motor_6, LOW);
    }

    // Button for servo3
    if (receive_data.button) {
      myservo3.write(90);
    } else {
      myservo3

